<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="searchmodel"
            type="water.model.RecentListModel" />

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/padding_16"
        android:layout_marginTop="@dimen/padding_16"
        android:layout_marginRight="@dimen/padding_16"
        android:layout_marginBottom="@dimen/dp_6"
        android:background="@drawable/bg_image_selector_white">

        <TextView
            android:id="@+id/liquar_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center"
            android:hint="WATER"
            android:layout_alignParentLeft="true"
            android:text="@{searchmodel.name}"
            android:textAllCaps="true"
            android:textColor="@color/light_black"
            android:textSize="@dimen/fontSize_24"
            android:textStyle="bold" />
        <ImageView
            android:id="@+id/iv_popular_liquar_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/dp_6"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:src="@drawable/ic_forward_arrow"
            />
    </RelativeLayout>

</layout>