<?xml version="1.0" encoding="utf-8"?>
<resources >
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/blue</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:windowBackground">@color/white</item>

    </style>

    <style name="AppTheme.FullScreen">
        <item name="android:windowDisablePreview">true</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>

    <style name="PinWidget.PinView" parent="Widget.AppCompat.EditText">
        <item name="android:background">@null</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:maxLines">1</item>
    </style>
    <!-- Button Styles -->
    <style name="Button">
        <item name="android:gravity">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:layout_width">@dimen/buttonWidth_148</item>
        <item name="android:layout_height">@dimen/buttonHeight_32</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:elevation">4dp</item>
    </style>
    <style name="Button.Green">
        <item name="android:background">@drawable/bg_selector_button_blue</item>
        <item name="android:textColor">@drawable/text_selector_button_green</item>
        <item name="android:textSize">@dimen/fontSize_10</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
    </style>
<!--    <style name="AppBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">-->
<!--        <item name="bottomSheetStyle">@style/AppModalStyle</item>-->
<!--    </style>-->
<!--    <style name="AppModalStyle" parent="Widget.Design.BottomSheet.Modal">-->
<!--        <item name="android:windowSoftInputMode">adjustPan</item>-->
<!--    </style>-->
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.Light">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/black</item>
    </style>
    <style name="BottomNavigationView.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">10sp</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <style name="Theme.LiqourShop..DatePicker" parent="AppTheme">
        <item name="colorControlNormal"> ?colorAccent </item>
    </style>
    <style name="DatePickerBottomDialog" parent="android:Theme.Light">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    <style name="DatePickerDialogAnim" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/datepicker_dialog_in</item>
        <item name="android:windowExitAnimation">@anim/datepicker_dialog_out</item>
    </style>


    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/rounded_dialog</item>
    </style>


</resources>